<%= provide(:title, "Blog") %>
<h2>Blog</h2>

<% @posts.each do |post| %>
  <h3><%= link_to post.title, post %></h3>
  <h4><%= post.byline %></h4>
  <p>Posted: <%= time_ago_in_words post.created_at %> ago</p>
  <p>
    <%= link_to 'Show', post %> | 
    <%= link_to 'Edit', edit_post_path(post) %> | 
    <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %> 
  </p>
<% end %>
<br>

<%= link_to 'New Post', new_post_path %>
